{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    // use non es modules as default imports
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src", "./html5lib-tests/"]
}
